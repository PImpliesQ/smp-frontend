generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Recipe {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  name        String
  user_id     String
  description String   @db.Text
  ingredients String   @db.Text
  steps       String   @db.Text
  diet        String
  people      Int
  food_saved  Int
}

model User {
  userId   String  @id
  location String?
}
